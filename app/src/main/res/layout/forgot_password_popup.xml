<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.chip.Chip
        android:id="@+id/ResetPasswordConfirmButton"
        android:layout_width="210dp"
        android:layout_height="51dp"
        android:layout_marginTop="12dp"
        app:chipBackgroundColor="#5DB075"
        app:layout_constraintEnd_toEndOf="@+id/ForgotPasswordPopUp"
        app:layout_constraintStart_toStartOf="@+id/ForgotPasswordPopUp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Spinner
        android:id="@+id/ForgotPasswordPopUp"
        android:layout_width="380dp"
        android:layout_height="273dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintCircleRadius="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/ForgotPasswordPopUp"
        app:layout_constraintTop_toTopOf="@+id/ForgotPasswordPopUp"
        app:srcCompat="@drawable/exit"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/resetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/reset_has_a"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ForgotPasswordPopUp" />

    <EditText
        android:id="@+id/recoverPasswordEmail"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/ForgotPasswordPopUp"
        app:layout_constraintStart_toStartOf="@+id/ForgotPasswordPopUp"
        app:layout_constraintTop_toBottomOf="@+id/resetPassword"
        android:autofillHints="" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="273dp"
        android:layout_height="37dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="53dp"
        android:text="@string/na_podany_adres_email_zostanie_wys_any_link_pozwalaj_cy_na_zmian_has_a"
        app:layout_constraintEnd_toEndOf="@+id/ForgotPasswordPopUp"
        app:layout_constraintStart_toStartOf="@+id/ForgotPasswordPopUp"
        app:layout_constraintTop_toBottomOf="@+id/recoverPasswordEmail" />

    <TextView
        android:id="@+id/ResetPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wy_lij"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/ResetPasswordConfirmButton"
        app:layout_constraintEnd_toEndOf="@+id/ResetPasswordConfirmButton"
        app:layout_constraintStart_toStartOf="@+id/ResetPasswordConfirmButton"
        app:layout_constraintTop_toTopOf="@+id/ResetPasswordConfirmButton" />

</androidx.constraintlayout.widget.ConstraintLayout>